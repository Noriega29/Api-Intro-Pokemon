@using PokedexClient.Models.ViewModels
@model PokemonViewModel

<div class="row mb-3">
    <div class="form-group col-5">
        <label asp-for="Numero" class="control-label" for="numero"></label>
        <input asp-for="Numero" class="form-control" id="numero" min="1" placeholder="Asigna un número" required />
        <div class="invalid-feedback">
            Ingresa un número mayor a cero.
        </div>
    </div>

    <div class="form-group col-7">
        <label asp-for="Name" class="control-label" for="nombre"></label>
        <input asp-for="Name" class="form-control" id="nombre" placeholder="Ingresa un nombre" required />
        <div class="invalid-feedback">
            Ingresa un nombre.
        </div>
    </div>
</div>

<div class="row mb-3">
    <div class="form-group col-6">
        <label asp-for="PrimerTipo" class="control-label" for="tipo1"></label>
        <select asp-for="PrimerTipo" asp-items="ViewBag.Tipos" class="form-control" id="tipo1"></select>
    </div>

    <div class="form-group col-6">
        @if (Model != null)
        {
            if (Model.SegundoTipo == 0)
            {
                <div class="row justify-content-between g-2">
                    <div class="col-auto">
                        <label asp-for="SegundoTipo" class="control-label" for="tipo2"></label>
                    </div>

                    <div class="col-2">
                        <input id="checkTipo2" class="form-check-input" type="checkbox" onchange="activateInputTipo2()">
                    </div>
                </div>

                <div class="row g-0">
                    <select id="tipo2" asp-for="SegundoTipo" asp-items="ViewBag.Tipos" class="form-control" disabled></select>
                </div>
            }
            else
            {
                <div class="row justify-content-between g-2">
                    <div class="col-auto">
                        <label asp-for="SegundoTipo" class="control-label" for="tipo2"></label>
                    </div>

                    <div class="col-2">
                        <input id="checkTipo2" class="form-check-input" type="checkbox" checked onchange="activateInputTipo2()">
                    </div>
                </div>

                <div class="row g-0">
                    <select id="tipo2" asp-for="SegundoTipo" asp-items="ViewBag.Tipos" class="form-control"></select>
                </div>
            }
        }else
        {
            <div class="row justify-content-between g-2">
                <div class="col-auto">
                    <label asp-for="SegundoTipo" class="control-label" for="tipo2"></label>
                </div>

                <div class="col-2">
                    <input id="checkTipo2" class="form-check-input" type="checkbox" onchange="activateInputTipo2()">
                </div>
            </div>

            <div class="row g-0">
                <select id="tipo2" asp-for="SegundoTipo" asp-items="ViewBag.Tipos" class="form-control" disabled></select>
            </div>
        }
    </div>
</div>

<div class="row mb-3">
    <div class="form-group col-12">
        <label asp-for="Description" class="control-label" for="descripcion"></label>
        <textarea asp-for="Description" id="descripcion" class="form-control" rows="3" placeholder="Escribe una descripción para el Pokémon" required></textarea>
        <div class="invalid-feedback">
            Ingresa una descripción.
        </div>
    </div>
</div>
