@model IEnumerable<Pokemon>

@{
    ViewData["Title"] = "Pokédex";
}

<table class="table table-hover caption-top">
    <caption>
        <div class="row justify-content-between position-vertical-center">
            <div class="col-6">
                <h3 class="m-0">
                    Lista de pokémons
                </h3>
            </div>
            <div class="col-6 position-right">
                <a asp-action="Create" class="btn btn-primary">Agregar nuevo</a>
            </div>
        </div>
    </caption>

    <thead class="table-dark">
        <tr class="position-center">
            <th class="col-auto" style="width: 50px; min-width: 45px; max-width: 50px;">
                N.°
            </th>
            <th class="col-auto">
                Nombre
            </th>
            <th class="col-auto">
                Tipos
            </th>
            <th class="col-auto">
                Descripcion
            </th>
            <th class="col-1 col-xl-2">
                Acciones
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td class="position-center">
                    @Html.DisplayFor(modelItem => item.Numero)
                </td>

                <td class="position-vertical-center">
                    <a asp-action="Details" asp-route-id="@item.IdPokemon" style="text-decoration: none; color: black;">
                        @Html.DisplayFor(modelItem => item.Name)
                    </a>
                </td>

                <td class="position-center">
                    @{
                        if (item.Tipos.Count() == 1)
                        {
                            foreach (var par in item.Tipos)
                            {
                                <div class="d-grid gap-2 col-12">
                                    @Html.DisplayFor(modelItem => par.Value)
                                </div>
                            }
                        }
                        else
                        {
                            <div class="container">
                                <div class="row justify-content-around">
                                    @{
                                        foreach (var par in item.Tipos)
                                        {
                                            <div class="d-grid gap-2 col-12 col-xl-6">
                                                @Html.DisplayFor(modelItem => par.Value)
                                            </div>
                                        }
                                    }
                                </div>
                            </div>
                        }
                    }
                </td>

                <td class="position-vertical-center">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td class="position-vertical-center">
                    <div class="container">
                        <div class="row">
                            <div class="d-grid gap-2 col-12 col-xl-6 p-1">
                                <a asp-action="Edit" asp-route-id="@item.IdPokemon" class="btn btn-primary btn-sm" type="button">Editar</a>
                            </div>

                            <div class="d-grid gap-2 col-12 col-xl-6 p-1">
                                <a asp-action="Delete" asp-route-id="@item.IdPokemon" class="btn btn-danger btn-sm" type="button">Borrar</a>
                            </div>
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
